/**index.wxss**/
.searchbar-result{
  margin-top: 0;
  font-size: 12rpx;
}
.result{
  font-size: 30rpx;
}
.index3{
  display: flex;
  flex-direction: column;
  margin-right: 70rpx;
}
text{
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}
button{
  border-radius: 5rpx;
}
#flyButton{
  margin-right: 100rpx;
  margin-top: 50rpx;
}
.index2{
  display: flex;

}
.searchbar-result:before{
  background-color: blueviolet;
  height: 50rpx;
  display: none;  
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
.schoollist-head-img{
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.schoollist{
  margin-top: 20rpx;
}
.school-list-info{
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
  position: relative;
}

.school-list-photo{
  width: 350rpx;
  height: 300rpx;
  border-radius: 50rpx;
}
.school-list-desc{
  display: block;
  background-color: #000;
  color: #fff;
  position: absolute;
  bottom: 3%;
  left: 0;
  width: 94%;
  text-align: center;
  font-size: 25rpx;
  padding: 10rpx;
  opacity: 0.7;
}
